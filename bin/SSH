#!/usr/bin/env ruby

require "Chef_Solo_Nodes"

n = Chef_Solo_IPs(Dir.glob("nodes/#{ARGV.first}.json")).first

unless n
  print "xx.xx.xx.xx"
  exit 1
end

uri = URI.parse("ssh://#{n}")

str = ""

if uri.port
  str << "-p #{uri.port} "
end

if uri.user
  str << "#{uri.user}@"
end

str << "#{uri.host}"
print str
